extends template

block content
	if (!user)
		h3 You are not logged in!
		a(href='/signin')
			p Click here to sign in
		a(href='/register')
			p Click here to sign up
	if(user)
		.container-fluid
			header
				.container
					// Keeps nav at center of screen
					h1 Professional Journal
					if (user)
						h3 Welcome #{user.full_name}
					ul.nav.nav-tabs.nav-fill
						li.nav-item
							a.nav-link.active(href='#') Journals
						li.nav-item
							a.nav-link(href='#') Search
						li.nav-item
							a.nav-link(href='signin') Sign Out
			.createJournalButton
				button#addJournalButton + Create A New Journal
			#overlay
			#popup
				.popupForm
					form
						| Create A New Journal
						br
						input#journalName(type='text', name='journalName', placeholder='Enter Journal Name')
						br
						.popupButtons
							button#createButton Create
							button#cancelButton Cancel
								
			.clickablePanel(onclick="alert('Go to table of journal entries')")
				.heading
					| Journal 1
				.body
					ul#list(style='list-style-type:none')
						li Journal Entry 1
						li Journal Entry 2
						li Journal Entry 3
			.clickablePanel(onclick="alert('Go to table of journal entries')")
				.heading
					| Journal 2
				.body
					ul#list(style='list-style-type:none')
						li Journal Entry 1
						li Journal Entry 2
						li Journal Entry 3
			.clickablePanel(onclick="alert('Go to table of journal entries')")
				.heading
					| Journal 3
				.body
					| This is the journal's description. It states what the journal does and what it is used for.
			.clickablePanel(onclick="alert('Go to table of journal entries')")
				.heading
					| Journal 4
